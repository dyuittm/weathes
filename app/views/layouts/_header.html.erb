<header>
  <nav class="navbar navbar-expand-lg navbar-light border-bottom border border-secondary">
    <div class="container">
      <a class="navbar-brand" href="/">
        <%= image_tag "logo.svg", width: "200", height:"90" %>
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ml-auto">
          <% if customer_signed_in? %>
            <p id="customer_name">ようこそ、<%= current_customer.user_name %>さん！</p>
            <li class="nav-item mr-3">
              <%= link_to customer_path(current_customer), class: 'btn btn-sm btn-outline-secondary nav-link text-dark' do %>
                <i class="far fa-smile"></i>mypage
              <% end %>
            </li>
            <li class="nav-item mr-3">
              <%= link_to posts_path, class: 'btn btn-sm btn-outline-secondary nav-link text-dark' do %>
                <i class="fas fa-images"></i>posts
              <% end %>
            </li>
            <li class="nav-item mr-3">
              <%= link_to customers_path, class: 'btn btn-sm btn-outline-secondary nav-link text-dark' do %>
                <i class="fas fa-users"></i>users
              <% end %>
            </li>
            <li class="nav-item mr-3">
              <%= link_to destroy_customer_session_path, method: :delete, class: 'btn btn-sm btn-outline-secondary nav-link text-dark' do %>
                <i class="fas fa-sign-out-alt"></i>logout
              <% end %>
            </li>
          <% elsif admin_signed_in? %>
            <p id="admin_name">こちらは管理者専用ページです</p>
            <li class="nav-item mr-3">
              <%= link_to admin_customers_path, class: 'btn btn-sm btn-outline-secondary nav-link text-dark' do %>
                <i class="fas fa-users"></i>users
              <% end %>
            </li>
            <li class="nav-item mr-3">
              <%= link_to admin_posts_path, class: 'btn btn-sm btn-outline-secondary nav-link text-dark' do %>
                <i class="fas fa-images"></i>posts
              <% end %>
            </li>
            <li class="nav-item mr-3">
              <%= link_to destroy_admin_session_path, method: :delete, class: 'btn btn-sm btn-outline-secondary nav-link text-dark' do %>
                <i class="fas fa-sign-out-alt"></i>logout
              <% end %>
            </li>
          <% else %>
            <li class="nav-item mr-3">
              <%= link_to about_path, class: 'btn btn-sm btn-outline-secondary nav-link text-dark' do %>
                <i class="fas fa-book"></i>about
              <% end %>
            </li>
            <li class="nav-item mr-3">
              <%= link_to new_customer_registration_path, class: 'btn btn-sm btn-outline-secondary nav-link text-dark' do %>
                <i class="fas fa-user-plus"></i>signup
              <% end %>
            </li>
            <li class="nav-item mr-3">
              <%= link_to new_customer_session_path, class: 'btn btn-sm btn-outline-secondary nav-link text-dark' do %>
                <i class="fas fa-sign-in-alt"></i>login
              <% end %>
            </li>
            <li class="nav-item mr-3">
              <%= link_to customer_guest_sign_in_path, class: "btn btn-sm btn-outline-secondary nav-link text-dark", method: :post do %>
                <i class="far fa-user-circle"></i>guest
              <% end %>
            </li>
          <% end %>
        </ul>
      </div>
      <% if signed_in? %>
        <%= render 'searches/form' %>
      <% end %>
    </div>
  </nav>
</header>