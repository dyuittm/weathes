<div class="container">
  <div class="row">
    <div class="col-sm-10">
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Text</th>
            <th>Image</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to admin_customer_path(post.customer) do %>
                  <%= image_tag post.customer.get_profile_image, class: "rounded-circle", size:'50x50' %><br>
                  <%= post.customer.user_name %>
                <% end %>
              </td>
              <td><%= link_to post.title, admin_post_path(post), class: "admin_post_#{post.id}" %></td>
              <td><%= post.body %></td>
              <td><%= post.post_images.attached? ? post.post_images.count : 0 %></td>
              <td>コメント数: <%= post.post_comments.count %></td>
              <td>
                <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i><%= post.favorites.count %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
