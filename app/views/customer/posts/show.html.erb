<%= render 'layouts/error', model: @post_new %>
<div class='container'>
  <div class='row'>
    <div class='col-md-4 mt-3'>
      <%= render 'customer/customers/info', customer: @customer %>
      <%= render 'form', post: @post_new %>
    </div>

    <div class='col-md-7 mt-3'>
  		<h3 class="text-center">-post detail-</h3>

      <div class="d-flex flex-row">
        <p class="font-weight-bold"><%= @post.title %></p><br>
        <%= link_to posts_path, class: "ml-3" do %>
          <%= image_tag @post.customer.get_profile_image, class: "rounded-circle", size:"45x45" %><br>
          <%= @post.customer.user_name %>
        <% end %>
      </div>

      <div>
  		  <% @post.post_images.each do |image| %>
  		    <%= image_tag image, size:"170x200", class: "mr-3" %>
  		  <% end %>
  		</div>

      <div class="text-under mt-4"><%= @post.body %></div>

      <div class="d-flex justify-content-end mt-3">
        <div class="favorite_btn_<%= @post.id %>">
          <%= render "customer/favorites/favorite-btn", post: @post %>
        </div>
        <% if @post.customer == current_customer %>
          <%= link_to edit_post_path(@post), class: "btn btn-sm btn-outline-dark ml-2" do %>
            <i class="fa-solid fa-pen-to-square"></i>
          <% end %>
          <%= link_to @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-outline-dark ml-2" do %>
            <i class="fa-solid fa-eraser"></i>
          <% end %>
        <% end %>
      </div>

      <div class="comment d-md-flex">
        <div class="comments-area col-md-6">
          <%= render 'customer/post_comments/index', post: @post %>
        </div>
        <div class="new-comment col-md-6 mt-3">
          <%= render 'customer/post_comments/form', post: @post, post_comment: @post_comment %>
        </div>
      </div>
    </div>

  </div>
</div>