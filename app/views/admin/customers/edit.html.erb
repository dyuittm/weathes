<div class="container">
  <div class="row">
    <h4 class="table-active col-auto mt-3">会員情報編集</h4>
    <%= render 'layouts/error', model: @customer %>
    <div class="col-sm-12 mt-5">
      <%= form_with model: @customer, url: customer_path, method: :patch,  local:true do |f| %>
        <%= image_tag @customer.get_profile_image, class: "rounded-circle", size: "100x100" %>

        <div class="form-group">
          <%= f.label :アイコン %>
          <%= f.file_field :profile_image, class: "form-control-file", accept: 'image/*' %>
        </div>

        <div class="form-group row">
          <%= f.label :名前, class: 'col-sm-3 control-label' %>
          <%= f.text_field :first_name, autofocus: true, class: 'rounded col-sm-2 mr-5' %>
          <%= f.text_field :last_name, class: 'rounded col-sm-2' %>
        </div>

        <div class="form-group row">
          <%= f.label :フリガナ, class: 'col-sm-3 control-label' %>
          <%= f.text_field :first_name_kana, class: 'rounded col-sm-2 mr-5'%>
          <%= f.text_field :last_name_kana, class: 'rounded col-sm-2' %>
        </div>

        <div class="form-group row">
          <%= f.label :ユーザーネーム, class: 'col-sm-3 control-label' %>
          <%= f.text_field :user_name, class: 'rounded col-sm-2 mr-5' %>
        </div>

        <div class="form-group row">
          <%= f.label :お住まいの都道府県, class: 'col-sm-3 control-label' %>
          <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name) %>
        </div>

        <div class="form-group row">
          <%= f.label :メールアドレス, class: 'col-sm-3 control-label' %>
          <%= f.email_field :email, class: 'rounded col-sm-2' %>
        </div>

        <div class="form-group row">
          <%= f.label :会員ステータス, class: 'col-sm-2 control-label' %>
          <%= f.radio_button :is_deleted, :false %>
          <%= f.label :is_deleted, "有効", class: 'col-sm-1' %>
          <%= f.radio_button :is_deleted, :true %>
          <%= f.label :is_deleted, "退会", class: 'col-sm-1' %>
        </div>

        <div class="col-sm-9">
          <%= f.submit "変更", class: "btn btn-success col-sm-3 offset-sm-4 font-weight-bold" %>
        </div>
      <% end %>
    </div>
  </div>
</div>