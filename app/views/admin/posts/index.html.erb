<div class="container">
  <div class="row">
    <div class="col-md-12 mt-3">
      <h3 class="text-center">-post index-</h3>
      <table class="table mt-5">
        <thead class="table-dark text-light">
          <tr>
            <th width="15%">user</th>
            <th width="20%"></th>
            <th width="30%">post</th>
            <th width="15%">image</th>
            <th colspan="3" width="20%"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to admin_customer_path(post.customer), class: "link" do %>
                  <%= image_tag post.customer.get_profile_image, class: "rounded-circle", size:'50x50' %><br>
                  <%= post.customer.user_name %>
                <% end %>
              </td>
              <td>
                <%= post.customer.prefecture.name %><br>
                <%= l post.created_at %>
              </td>
              <td>
                title: <%= link_to truncate(post.title, length: 20), admin_post_path(post), class: "link" %><br>
                <%= truncate(post.body, length: 15) %><br>
              <td>
                <%= image_tag post.post_images[0], size:'70x70' %>
              </td>
              <td>
                <i class="far fa-comment-dots"></i><%= post.post_comments.count %>
              </td>
              <td>
                <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i><%= post.favorites.count %>
              </td>
              <td>
                <%= link_to admin_post_path(post), class: "btn btn-primary btn-sm" do %>
                  <i class="fas fa-image"></i>show
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>
