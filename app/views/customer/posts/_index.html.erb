<% if customer == current_customer %>
  <div class="text-right">
    <%= link_to favorites_path(customer), class: "btn btn-outline-secondary text-dark" do %>
      <i class="fa-solid fa-heart-circle-check"></i>favorite
    <% end %>
  </div>
<% end %>
<table class="table mt-3">
  <thead class="table-dark text-light">
    <tr>
      <th width="15%"></th>
      <th width="25%">title</th>
      <th width="25%">text</th>
      <th width="15%">image</th>
      <th colspan="3"width="20%"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to (post.customer) do %>
            <%= image_tag post.customer.get_profile_image, class: "rounded-circle", size:'50x50' %><br>
            <%= post.customer.user_name %>
          <% end %>
        </td>
        <td><%= link_to truncate(post.title, length: 15), post, class: "post_#{post.id}" %></td>
        <td><%= truncate(post.body, length: 10) %></td>
        <td><%= image_tag post.post_images[0], size:'50x50' %></td>
        <td>
          <%= post.post_comments.count do %>
            <i class="fa-regular fa-comment-dots"></i>
          <% end %>
        </td>
        <% if admin_signed_in? %>
          <td>
            <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
            <%= post.favorites.count %>
          </td>
        <% else %>
          <td class="favorite_btn_<%= post.id %>">
            <%= render "customer/favorites/favorite-btn", post: post %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

