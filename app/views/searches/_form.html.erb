<%= form_with url: search_path, local: true, method: :get, class: "search-container" do |f| %>
  <%= f.select :model, options_for_select({ "Customer" => "customer", "Post" => "post" }) %>
  <%= f.text_field :content, placeholder: "search" %>
  <%= f.button :type => "submit" do %>
    <i class='fas fa-search'></i>
  <% end %>
<% end %>