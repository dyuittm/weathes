<div class="container">
  <div class="row">
    <div class="col-sm-12 mt-3">
      <h3 class="text-center">-post index-</h3>
      <table class="table mt-5">
        <thead class="table-dark text-light">
          <tr>
            <th width="15%"></th>
            <th width="25%">title</th>
            <th width="25%">text</th>
            <th width="15%">image</th>
            <th colspan="3" width="20%"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to (post.customer) do %>
                  <%= image_tag post.customer.get_profile_image, class: "rounded-circle", size:'50x50' %>
                  <%= post.customer.user_name %>
                <% end %>
              </td>
              <td><%= link_to truncate(post.title, length: 20),post, class: "post_#{post.id}" %></td>
              <td><%= truncate(post.body, length: 15) %></td>
              <td><%= image_tag post.post_images[0], size:'50x50' %></td>
              <td>
                <%= post.post_comments.count do %>
                  <i class="fa-regular fa-comment-dots"></i>
                <% end %>
              </td>
              <td class="favorite_btn_<%= post.id %>">
                <%= render "customer/favorites/favorite-btn", post: post %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
