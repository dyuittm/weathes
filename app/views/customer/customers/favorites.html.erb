<div class="container">
  <div class="row">
    <div class="col-md-12 mx-auto mt-3">
      <h3 class="text-center">-favorite-</h3>
      <% if @favorite_posts.present? %>
        <table class="table mt-5">
          <thead class="table-dark text-light">
            <tr>
              <th width="15%"></th>
              <th width="15%">title</th>
              <th width="30%">text</th>
              <th width="20%">image</th>
              <th width="10%">comment</th>
              <th width="10%">favorite</th>
            </tr>
          </thead>
          <tbody>
            <% @favorite_posts.each do |post| %>
              <tr>
                <td>
                  <%= link_to (post.customer) do %>
                    <%= image_tag post.customer.get_profile_image, class: "rounded-circle", size:'50x50' %><br>
                    <%= post.customer.user_name %>
                  <% end %>
                </td>
                <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
                <td><%= post.body %></td>
                <td><%= image_tag post.post_images[0], size:'50x50' %></td>
                <td><%= post.post_comments.count %></td>
                <% if admin_signed_in? %>
                  <td>
                    <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
                    <%= post.favorites.count %>
                  </td>
                <% else %>
                  <td class="favorite_btn_<%= post.id %>">
                    <%= render "customer/favorites/favorite-btn", post: post %>
                  </td>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>お気に入りの記事はありません</p>
      <% end %>
      <%= paginate @favorite_posts %>
    </div>
  </div>
</div>
