<div class='container'>
  <div class='row'>

    <div class='col-md-10 offset-md-1 mt-3'>
  		<h3 class="text-center">-post detail-</h3>

      <div class="d-flex flex-row">
        <%= link_to admin_customer_path(@post.customer), class: "mb-3" do %>
          <%= image_tag @post.customer.get_profile_image, class: "rounded-circle", size:"45x45" %><br>
          <%= @post.customer.user_name %>
        <% end %>
        <p class="ml-5 mt-3 font-weight-bold"><%= @post.title %></p><br>
      </div>

      <div class="d-flex flex-row">
  		  <% @post.post_images.each do |image| %>
  		    <%= image_tag image, size:"170x200", class: "mr-3" %>
  		  <% end %>
        <p class="align-text-bottom"><%= simple_format(@post.body) %></p>
  		</div>

      <div class="d-flex justify-content-end mt-3">
        <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i><%= @post.favorites.count %>
        <%= link_to edit_admin_post_path(@post), class: "btn btn-sm btn-outline-dark ml-2" do %>
          <i class="fa-solid fa-pen-to-square"></i>
        <% end %>
        <%= link_to @post, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-outline-dark ml-2" do %>
          <i class="fa-solid fa-eraser"></i>
        <% end %>
      </div>

      <div class="comment d-md-flex">
        <div class="comments-area col-md-6">
          <%= render 'customer/post_comments/index', post: @post %>
        </div>
      </div>
    </div>

  </div>
</div>
