<h3>-index-</h3>
<div class="text-right">
  <%= link_to favorites_path(customer), class: "btn btn-outline-secondary text-dark" do %>
    <i class="fa-solid fa-heart-circle-check"></i>favorite
  <% end %>
</div>
<table class="table mt-3">
  <thead class="table-dark text-light">
    <tr>
      <th></th>
      <th>title</th>
      <th>text</th>
      <th>image</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to admin_customer_path(post.customer) do %>
            <%= image_tag post.customer.get_profile_image, class: "rounded-circle", size:'50x50' %>
            <%= post.customer.user_name %>
          <% end %>
        </td>
        <td><%= link_to post.title, admin_post_path(post), class: "post_#{post.id}" %></td>
        <td><%= post.body %></td>
        <td><%= image_tag post.post_images[0], size:'50x50' %></td>
        <td>コメント数: <%= post.post_comments.count %></td>
        <% if admin_signed_in? %>
          <td>
            <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
            <%= post.favorites.count %>
          </td>
        <% else %>
          <td class="favorite_btn_<%= post.id %>">
            <%= render "customer/favorites/favorite-btn", post: post %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
