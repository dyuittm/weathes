      <table class="table mt-5">
        <thead class="table-dark text-light">
          <tr>
            <th></th>
            <th>name</th>
            <th>address</th>
            <th>follower</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% customers.each do |customer| %>
            <tr>
              <td><%= image_tag customer.get_profile_image, class: "rounded-circle", size: "50x50" %></td>
              <td><%= customer.user_name %></td>
              <td><%= customer.prefecture.name %></td>
              <td><%= customer.followers.count %></td>
              <td>
                <% if admin_signed_in? %>
                  <%= link_to "Show", admin_customer_path(customer), class: "customer_#{customer.id}" %>
                <% else%>
                  <%= link_to "Show", customer_path(customer) %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>