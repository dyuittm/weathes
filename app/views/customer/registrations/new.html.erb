<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>

  <div class="form-group row">
    <%= f.label :名前, class: 'col-sm-2 control-label' %><br />
    <%= f.label :（姓）, class: 'col-sm-1' %>
    <%= f.text_field :first_name, autofocus: true, class: 'rounded col-sm-3' %>
    <%= f.label :（名）, class: 'col-sm-1' %>
    <%= f.text_field :last_name, class: 'rounded col-sm-3' %>
  </div>

  <div class="form-group row">
    <%= f.label :フリガナ, class: 'col-sm-2 control-label' %><br />
    <%= f.label :（セイ）, class: 'col-sm-1' %>
    <%= f.text_field :first_name_kana, class: 'rounded  col-sm-3' %>
    <%= f.label :（メイ）, class: 'col-sm-1' %>
    <%= f.text_field :last_name_kana, class: 'rounded col-sm-3' %>
  </div>

  <div class="form-group row">
    <%= f.label :ユーザーネーム, class: 'col-sm-2 control-label' %><br />
    <%= f.text_field :user_name, class: 'rounded col-sm-3' %>
  </div>

  <div class="form-group row">
    <%= f.label :お住まいの都道府県, class: 'col-sm-2 control-label' %><br />
    <%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name) %>
  </div>

  <div class="form-group row">
    <%= f.label :メールアドレス, class: 'col-sm-2 control-label' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded col-sm-3' %>
  </div>

  <div class="form-group row">
    <%= f.label :パスワード, class: 'col-sm-2 control-label' %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: 'rounded col-sm-3' %>
  </div>

  <div class="form-group row">
    <%= f.label :パスワード（確認）, class: 'col-sm-2 control-label' %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'rounded col-sm-3' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "customer/shared/links" %>
