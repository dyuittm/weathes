<table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th>address</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td><%= image_tag customer.get_profile_image, class: "rounded-circle", size: "50x50" %></td>
        <td><%= customer.user_name %></td>
        <td><%= customer.prefecture.name %></td>
        <td>フォロワー数: <%= customer.followers.count %></td>
        <td>
          <% if admin_signed_in? %>
          <%= link_to "Show", admin_customer_path(customer), class: "customer_#{customer.id}" %>
          <% else%>
          <%= link_to "Show", customer_path(customer), class: "customer_#{customer.id}" %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
