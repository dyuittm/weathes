<%= form_with url: search_path, local: true, method: :get, class: "search-container" do |f| %>
  <%= f.select :model, options_for_select({ "Customer" => "customer", "Post" => "post" }) %>
  <div class="search-box">
    <%= f.text_field :content, placeholder: "search", style: "border: none" %>
    <%= f.button :type => "submit", style: "border: none" do %>
      <i class="fa-solid fa-magnifying-glass"></i>
    <% end %>
  </div>
<% end %>