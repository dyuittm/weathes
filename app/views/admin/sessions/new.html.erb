<div class="container">
  <div class="row">
    <h2>Log in</h2>
    <div class="col-md-12 mt-5">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-group row">
          <%= f.label :メールアドレス, class: 'col-md-3 control-label' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded col-md-3' %>
        </div>

        <div class="form-group row">
          <%= f.label :パスワード, class: 'col-md-3 control-label' %><br />
          <%= f.password_field :password, autocomplete: "current-password", class: 'rounded col-md-3' %>
        </div>

        <% if devise_mapping.rememberable? %>
          <div class="form-group row">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
        <% end %>

        <div class="actions">
          <%= f.submit "Log in", class: 'btn btn-success col-md-2 mx-auto d-block' %>
        </div>
      <% end %>

      <%= render "admin/shared/links" %>
    </div>
  </div>
</div>
