<h3 class="text-center">-post detail-</h3>
<div class='container-fluid'>
  <div class='row'>
    <div class='col-md-7 mt-3'>

      <div class="float-left mt-2" style="font-size: 20px;">title: <%= @post.title %></div><br>

      <div class="d-flex justify-content-end mt-2">
        <%= link_to admin_customer_path(@post.customer), class: "link" do %>
          <%= image_tag @post.customer.get_profile_image, class: "rounded-circle", size:"45x45" %><br>
          <%= @post.customer.user_name %>
        <% end %>
      </div>

      <div class="d-flex flex-wrap justify-content-md-center">
  		  <% @post.post_images.each do |image| %>
  		    <%= image_tag image, size:"300x350", class: "rounded mr-3 mb-5" %>
  		  <% end %>
  		</div>
    </div>

    <div class='col-md-5 mt-5'>
      <div class="text-under mt-4"><%= simple_format(@post.body) %></div>
      <div class="float-left mt-4">
        <%= @post.customer.prefecture.name %>
        <%= l @post.created_at %>
      </div>

      <div class="d-flex justify-content-end mt-4">
        <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i><%= @post.favorites.count %>
        <%= link_to edit_admin_post_path(@post), class: "btn btn-sm btn-outline-dark ml-2" do %>
          <i class="fas fa-edit"></i>
        <% end %>
        <%= link_to admin_post_path, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-outline-dark ml-2" do %>
          <i class="fas fa-eraser"></i>
        <% end %>
      </div>

      <div class="comment mt-5">
        <div class="comments-area col-md-6">
          <%= render 'customer/post_comments/index', post: @post %>
        </div>
      </div>
    </div>
  </div>
</div>
