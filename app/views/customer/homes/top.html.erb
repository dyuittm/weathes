<div class="container">
  <h3 class="text-center mt-5">-new post-</h3>
  <div class="card-list-container d-flex flex-wrap">
    <% @posts.each do |post| %>
      <div class="card text-dark shadow-lg" style="width: 300px; margin: 25px 35px 10px 35px;">
        <%= link_to post_path(post) do %>
          <%= image_tag post.post_images[0], size: '200x290', class: "card-img-top";  %><br>
        <% end %>
        <div class="card-body">
          <div class="row">
            <div class="col-2">
              <%= image_tag post.customer.get_profile_image, size: '50x50', class: "mt-3 rounded-circle"; %>
            </div>
            <div class="col-10">
              <p class="card-title">
                <strong><span> <%= truncate(post.title, length: 10) %></span></strong>
              </p>
              <span>By <%= post.customer.user_name %></span><br>
              <span><%= l post.created_at %></span>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <div class="text-right">
    <%= link_to '全ての投稿を見る>',posts_path %>
  </div>
</div>
