      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Text</th>
            <th>Image</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% posts.each do |post| %>
            <tr>
              <td>
                <%= link_to (post.customer) do %>
                  <%= image_tag post.customer.get_profile_image, size:'50x50' %>
                  <%= post.customer.last_name %>
                <% end %>
              </td>
              <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
              <td><%= post.body %></td>
              <td><%= post.post_images.attached? ? post.post_images.count : 0 %></td>
              <td>コメント数: <%= post.post_comments.count %></td>
              <td class="favorite_btn_<%= post.id %>">
                <%= render "customer/favorites/favorite-btn", post: post %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
