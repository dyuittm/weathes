<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to (post.customer) do %>
            <%= image_tag post.user.get_profile_image, size:'50x50' %>
            <%= post.customer.name %>
          <% end %>
        </td>
        <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
        <td><%= post.body %></td>
        <td>コメント数: <%= post.post_comments.count %></td>
        <td class="favorite_btn_<%= post.id %>">
          <%= render "favorites/favorite-btn", post: post %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>