<% if customer == current_customer %>
  <div class="text-right">
    <%= link_to favorites_path(customer), class: "btn btn-outline-secondary text-dark" do %>
      <i class="fa-solid fa-heart-circle-check"></i>favorite
    <% end %>
  </div>
<% end %>
<table class="table mt-5">
  <thead class="table-dark text-light">
    <tr>
      <th width="15%"></th>
      <th width="20%">title</th>
      <th width="25%">text</th>
      <th width="20%">image</th>
      <th width="10%">comment</th>
      <th width="10%">favorite</th>
    </tr>
  </thead>
  <tbody>
    <% posts.each do |post| %>
      <tr>
        <td>
          <%= link_to (post.customer) do %>
            <%= image_tag post.customer.get_profile_image, class: "rounded-circle", size:'50x50' %>
            <%= post.customer.user_name %>
          <% end %>
        </td>
        <td><%= link_to post.title,post, class: "post_#{post.id}" %></td>
        <td><%= post.body %></td>
        <td><%= image_tag post.post_images[0], size:'50x50' %></td>
        <td><%= post.post_comments.count %></td>
        <% if admin_signed_in? %>
          <td>
            <i class="fas fa-heart" aria-hidden="true" style="color: red;"></i>
            <%= post.favorites.count %>
          </td>
        <% else %>
          <td class="favorite_btn_<%= post.id %>">
            <%= render "customer/favorites/favorite-btn", post: post %>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

