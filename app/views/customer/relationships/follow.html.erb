<div class="container">
  <div class="row">
    <div class="col-md-6 mt-3">
      <h3 class="text-center">-follow users-</h3>
      <% if @customers_followings.exists? %>
        <table class="table mt-5">
          <thead class="table-dark text-light">
            <tr>
              <th width="25%"></th>
              <th width="25%">name</th>
              <th width="25%">follower</th>
              <th colspan="3" width="25%"></th>
            </tr>
          </thead>
          <tbody>
            <% @customers_followings.each do |customer| %>
              <tr>
                <td><%= image_tag customer.get_profile_image, class: "rounded-circle", size: "100x100" %></td>
                <td><%= customer.user_name %></td>
                <td><%= customer.followers.count %></td>
                <td>
                  <%= link_to customer_path(customer), class: "btn btn-primary btn-sm" do %>
                    <i class="fas fa-user"></i>show
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p class="text-center">ユーザーはいません</p>
      <% end %>
    </div>

    <div class="col-md-6 mt-3">
      <h3 class="text-center">-follower users-</h3>
      <% if @customers_followers.exists? %>
        <table class="table mt-5">
