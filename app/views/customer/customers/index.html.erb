<div class='container'>
  <div class='row'>
    <div class='col-md-12 mt-5'>
      <h3 class="text-center">-user index-</h3>
      <table class="table mt-5">
        <thead class="table-dark text-light">
          <tr>
            <th width="20%"></th>
            <th width="25%">name</th>
            <th width="25%">address</th>
            <th width="10%">post</th>
            <th width="10%">follower</th>
            <th colspan="3" width="10%"></th>
          </tr>
        </thead>
        <tbody>
          <% @customers.each do |customer| %>
            <tr>
              <td><%= image_tag customer.get_profile_image, class: "rounded-circle", size: "50x50" %></td>
              <td><%= customer.user_name %></td>
              <td><%= customer.prefecture.name %></td>
              <td><%= customer.posts.count %></td>
              <td></i><%= customer.followers.count %></td>
              <td>
                <%= link_to customer_path(customer), class: "btn btn-primary" do %>
                  <i class="fa-solid fa-user"></i>show
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>