<table class="table mt-5">
  <thead class="table-dark text-light">
    <tr>
      <th width="15%"></th>
      <th width="20%">name</th>
      <th width="20%">address</th>
      <th width="15%">post</th>
      <th width="15%">follower</th>
      <th colspan="3" width="15%"></th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
      <tr>
        <td><%= image_tag customer.get_profile_image, class: "rounded-circle", size: "50x50" %></td>
        <td><%= customer.user_name %></td>
        <td><%= customer.prefecture.name %></td>
        <td><%= customer.posts.count %></td>
        <td><%= customer.followers.count %></td>
        <td>
          <%= link_to customer_path(customer), class: "btn btn-primary btn-sm" do %>
            <i class="fas fa-user"></i>show
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate customers %>
