<div class="col-sm-4">
  <h3>-post edit-</h3>
  <%= form_with model: @post, url: admin_post_path, method: :patch, local:true do |f| %>

    <div class="form-group row">
      <% if @post.post_images.attached? %>
        <p>選択済みの画像（削除する画像にチェックをつけてください）</p>
        <div style="display: flex; flex-wrap: wrap; width: 750px;">
          <% @post.post_images.each do |image| %>
            <div style="display: flex; margin:5px 5px 5px 0;">
              <%= f.check_box :image_ids, { multiple: true }, image.id, false %>
              <label for="image_ids_<%= image.id %>" >
                <%= image_tag image, size: '200x200' %>
              </label>
            </div>
          <% end %>
        </div>
      <% end %>
      <%= f.file_field :post_images, multiple: true %>
    </div>

    <div class="form-group row">
      <%= f.label :タイトル, class: 'col-sm-3 control-label' %><br />
      <%= f.text_field :title, class: 'rounded col-sm-5' %>
    </div>

    <div class="form-group row">
      <%= f.label :本文, class: 'col-sm-3 control-label' %><br />
      <%= f.text_area :body, class: 'rounded col-sm-5' %>
    </div>

    <div class="actions">
      <%= f.button :type => "submit", style: 'border-style: none;', class: "btn btn-success col-sm-3 mx-auto d-block" do %>
        <i class="fa-solid fa-pen-to-square"></i>update
      <% end %>
    </div>
  <% end %>
</div>
