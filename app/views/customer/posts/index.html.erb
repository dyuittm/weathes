<div class="container">
  <div class="row">
    <div class="col-sm-12 mt-3">
      <h3 class="text-center">-post index-</h3>
      <table class="table mt-5">
        <thead class="table-dark text-light">
          <tr>
            <th width="15%">user</th>
            <th width="20%"></th>
            <th width="30%">post</th>
            <th width="15%">image</th>
            <th colspan="3" width="20%"></th>
          </tr>
        </thead>
        <tbody>
          <% @posts.each do |post| %>
            <tr>
              <td>
                <%= link_to (post.customer), class: "link" do %>
                  <%= image_tag post.customer.get_profile_image, class: "rounded-circle", size:'50x50' %>
                  <%= post.customer.user_name %>
                <% end %>
              </td>
              <td>
                <%= post.customer.prefecture.name %><br>
                <%= l post.created_at, format: :short %>
              </td>
              <td>
                <%= link_to truncate(post.title, length: 20),post, class: "link post_#{post.id}" %><br>
                <%= truncate(post.body, length: 15) %>
              </td>
              <td><%= image_tag post.post_images[0], size:'70x70' %></td>
              <td>
                <i class="far fa-comment-dots"></i><%= post.post_comments.count %>
              </td>
              <td class="favorite_btn_<%= post.id %>">
                <%= render "customer/favorites/favorite-btn", post: post %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate @posts %>
    </div>
  </div>
</div>
