<div class="container">
  <div class="row">
    <h3>-sign up-</h3>
    <div class="col-md-12 mt-5">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "customer/shared/error_messages", resource: resource %>

        <div class="form-group row">
          <%= f.label :名前, class: 'col-md-2 control-label' %><br />
          <%= f.label :（姓）, class: 'col-md-1' %>
          <%= f.text_field :first_name, autofocus: true, class: 'rounded col-md-3' %>
          <%= f.label :（名）, class: 'col-md-1' %>
          <%= f.text_field :last_name, class: 'rounded col-md-3' %>
        </div>

        <div class="form-group row">
          <%= f.label :フリガナ, class: 'col-md-2 control-label' %><br />
          <%= f.label :（セイ）, class: 'col-md-1' %>
          <%= f.text_field :first_name_kana, class: 'rounded col-md-3' %>
          <%= f.label :（メイ）, class: 'col-md-1' %>
          <%= f.text_field :last_name_kana, class: 'rounded col-md-3' %>
        </div>

        <div class="form-group row">
          <%= f.label :ユーザーネーム, class: 'col-md-3 control-label' %><br />
          <%= f.text_field :user_name, class: 'rounded col-md-3' %>
        </div>

        <div class="form-group row">
          <%= f.label :お住まいの都道府県, class: 'col-md-3 control-label' %><br />
          <%= f.collection_select :prefecture_id, Prefecture.all, :id, :name, {}, {class: 'rounded col-md-3'} %>
        </div>

        <div class="form-group row">
          <%= f.label :メールアドレス, class: 'col-md-3 control-label' %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'rounded col-md-3' %>
        </div>

        <div class="form-group row">
          <%= f.label :パスワード（6字以上）, class: 'col-md-3 control-label' %><br />
          <%= f.password_field :password, autocomplete: "new-password", class: 'rounded col-md-3' %>
        </div>

        <div class="form-group row">
          <%= f.label :パスワード（確認）, class: 'col-md-3 control-label' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'rounded col-md-3' %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: 'btn btn-success col-md-2 mx-auto d-block' %>
        </div>
      <% end %>
    </div>
    <div class="col-md-12">
      <span>既に登録済みの方はこちらから<%= render "customer/shared/links" %>してください。</span>
    </div>
  </div>
</div>
